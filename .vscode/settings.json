{
    //////////////////// Basic Settings ////////////////////
    // editor
    "editor.fontFamily": "'Noto Sans Mono', 'Noto Sans JP', 'Noto Emoji'",
    "editor.codeLensFontFamily": "'Noto Sans', 'Noto Sans JP', 'Noto Emoji'",
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "editor.autoIndent": "keep",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    // terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.commandsToSkipShell": [
        "matlab.interrupt"
    ],
    // explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",
    // files
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "files.associations": {
        ".m": "matlab",
        ".pages": "yaml"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.github": true,
        "**/.idx": true,
        "**/.vscode": true,
    },
    // extensions
    "extensions.ignoreRecommendations": true,
    // git
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    //////////////////// Extension Settings ////////////////////
    // Markdown
    "markdown.extension.list.indentationSize": "inherit",
        "markdown.styles": [
        "Assets/Styles/notebook.css"
    ],
    "markdown.marp.themes": [
        "Assets/Styles/handout.css",
        "Assets/Styles/slidedeck.css",
        "Assets/Styles/poster.css"
    ],
    "markdown.marp.breaks": "off",
    "markdown.marp.html": "all",
    "markdown.extension.katex.macros": {
        "\\td": "\\mathrm{d}",
        "\\fd": "\\mathrm{\\Delta}",
        "\\vd": "\\mathrm{\\delta}",
        "\\pd": "\\mathrm{\\partial}",
        "\\dd": "\\mathrm{\\partial}",
        "\\bd": "\\bar{\\mathrm{\\partial}}",
        "\\ci": "\\mathrm{i}",
        "\\cj": "\\mathrm{j}",
        "\\ce": "\\mathrm{e}",
        "\\vct": "\\boldsymbol{#1}",
        "\\tns": "\\pmb{\\mathsfit{#1}}",
        "\\vect": "\\mathbf{#1}",
        "\\tens": "\\pmb{\\mathsf{#1}}",
        "\\set": "\\mathbb{#1}",
        "\\family": "\\mathfrak{#1}",
        "\\op": "\\mathcal{#1}",
        "\\lap": "\\mathrm{\\Delta}",
        "\\adj": "\\dagger",
        "\\Tp": "\\mathrm{T}",
        "\\HTp": "\\mathrm{H}",
        "\\Exp": "\\mathbb{E}",
        "\\Var": "\\mathbb{V}",
        "\\tp": "t^{\\prime}",
        "\\nup": "Î½^{\\prime}",
        "\\xp": "x^{\\prime}",
        "\\yp": "y^{\\prime}",
        "\\zp": "z^{\\prime}",
        "\\rv": "\\vct{r}",
        "\\rvp": "\\vct{r}^{\\prime}",
        "\\up": "u^{\\prime}",
        "\\vp": "v^{\\prime}",
        "\\wp": "w^{\\prime}",
        "\\kv": "\\vct{k}",
        "\\kvp": "\\vct{k}^{\\prime}",
        "\\conj": "\\bar{#1}",
        "\\mirror": "\\check{#1}",
        "\\colonequiv": "\\vcentcolon\\Longleftrightarrow",
        "\\equivcolon": "\\Longleftrightarrow\\vcentcolon",
        "\\Imag": "\\operatorname*{Im}",
        "\\Real": "\\operatorname*{Re}",
        "\\Log": "\\operatorname*{Log}",
        "\\Arg": "\\operatorname*{Arg}",
        "\\abs": "\\operatorname*{abs}",
        "\\Span": "\\operatorname*{span}",
        "\\tr": "\\operatorname*{tr}",
        "\\id": "\\operatorname*{id}",
        "\\codim": "\\operatorname*{codim}",
        "\\im": "\\operatorname*{im}",
        "\\coim": "\\operatorname*{coim}",
        "\\coker": "\\operatorname*{coker}",
        "\\rank": "\\operatorname*{rank}",
        "\\Null": "\\operatorname*{null}",
        "\\Hom": "\\operatorname*{Hom}",
        "\\End": "\\operatorname*{End}",
        "\\Sym": "\\operatorname*{sym}",
        "\\Alt": "\\operatorname*{alt}",
        "\\dom": "\\operatorname*{dom}",
        "\\cod": "\\operatorname*{cod}",
        "\\ran": "\\operatorname*{ran}",
        "\\supp": "\\operatorname*{supp}",
        "\\Vect": "\\operatorname*{vec}",
        "\\Diag": "\\operatorname*{diag}",
        "\\Grad": "\\operatorname*{grad}",
        "\\Div": "\\operatorname*{div}",
        "\\Rot": "\\operatorname*{rot}",
        "\\Curl": "\\operatorname*{curl}",
        "\\Int": "\\operatorname*{Int}",
        "\\Ext": "\\operatorname*{Ext}",
        "\\Fr": "\\operatorname*{Fr}",
        "\\argmax": "\\operatorname*{arg\\,max}",
        "\\argmin": "\\operatorname*{arg\\,min}",
        "\\sign": "\\operatorname*{sgn}",
        "\\comb": "\\operatorname*{comb}",
        "\\sinc": "\\operatorname*{sinc}",
        "\\rect": "\\operatorname*{rect}",
        "\\eqannot": "\\color{##C63527}\\underset{\text{\textsf{#1}}}{\\underline{{\\color{##1a1a1a}#2}}}\\color{##1a1a1a}",
        "\\eqcolor": "\\color{##C63527}#1\\color{##1a1a1a}"
    },
    // LaTeX Workshop
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.hover.preview.newcommand.newcommandFile": "D:/OneDrive - The University of Tokyo/Configurations/vscode/commands.sty",
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.hand": true,
    "latex-workshop.view.pdf.zoom": "page-width",
    "latex-workshop.view.pdf.spreadMode": 0,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.bcf",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.ilg",
        "*.run.xml",
        "*.fdb_latexmk"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "platex",
            "command": "ptex2pdf",
            "args": [
                "-shell-escape",
                "-l",
                "-ot",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "uplatex",
            "command": "ptex2pdf",
            "args": [
                "-shell-escape",
                "-u",
                "-l",
                "-ot",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "pbibtex",
            "command": "pbibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "upbibtex",
            "command": "upbibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "makeindex",
            "command": "makeindex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "upmendex",
            "command": "upmendex",
            "args": [
                "-g",
                "-d ./index.dic",
                "%DOCFILE%"
            ]
        }
    ],
    // "latex-workshop.latex.recipes": [
    //     {
    //     "name": "lualatex*2",
    //     "tools": [
    //         "lualatex",
    //         "lualatex"
    //     ]
    //     }
    // ],
    "latex-workshop.latex.recipes": [
        {
            "name": "ptex2pdf -> pbibtex -> ptex2pdf*2",
            "tools": [
                "platex",
                "pbibtex",
                "platex",
                "platex"
            ]
        }
    ],
}
